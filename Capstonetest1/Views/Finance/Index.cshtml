@{
    ViewData["Title"] = "Index";
}

<h1>Finance</h1>

<div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h4>General Journal</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Journal">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h4>General Ledger</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Ledger">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h4>Monthly Income Statement</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Statement">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h4>Reconciliation Sheet</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Recon">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->

            <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h4>Inventory Stock Card</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Inventory">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h4>Purchase Order</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="PurchaseOrder">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h4>Paid Sale Invoice</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Invoice">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

</div>
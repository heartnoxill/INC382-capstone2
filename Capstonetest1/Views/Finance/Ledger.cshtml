@{
    ViewData["Title"] = "Ledger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="nav-link btn btn-secondary" asp-controller="Finance" asp-action="Index">Back to Finance Page</a>
</div>

<h1>General Ledger</h1>

<div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h4>Cash</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="Cash">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h4>Account Receivable</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="AccountReceivable">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h4>Inventory</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="InventoryLedger">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>

          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h4>Account Payable</h4>

                
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a class="nav-link" asp-area="" asp-controller="Finance" asp-action="AccountPayable">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
</div>